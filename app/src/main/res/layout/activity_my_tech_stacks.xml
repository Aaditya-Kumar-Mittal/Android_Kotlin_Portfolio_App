<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteback"
    tools:context=".MyTechStacks">

    <View
        android:id="@+id/techTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/tech_top" />

    <!-- GridLayout containing CardViews -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/techTop"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="20dp"
        android:columnCount="1"
        android:rowCount="3">

        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fullDev"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fulldev"
                android:gravity="center"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/androidDev"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/appdev"
                android:gravity="center"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>

        <!-- CardView 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flutterdev"
                android:gravity="center"
                android:orientation="vertical" />
        </androidx.cardview.widget.CardView>

        <!-- CardView 3 -->

    </GridLayout>

</RelativeLayout>